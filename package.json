{
    "private": true,
    "scripts": {
        "development": "mix",
        "watch": "mix watch",
        "hot": "mix watch --hot",
        "production": "mix --production",
        "prettier": "prettier \"./**/*.{yml,css,js,vue,json,php,md}\" ",
        "lint:check": "yarn prettier --check",
        "lint:fix": "yarn prettier --write"
    },
    "devDependencies": {
        "@prettier/plugin-php": "^0.16.1",
        "husky": "^4",
        "laravel-mix": "^6.0",
        "lint-staged": ">=10",
        "prettier": "^2.2.1",
        "resolve-url-loader": "^3.1.2"
    },
    "dependencies": {
        "tailwindcss": "^1.9.6",
        "vue": "^2.6.12",
        "vue-masked-input": "^0.5.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{yml,css,js,vue,json,php,md}": "prettier --write"
    }
}
